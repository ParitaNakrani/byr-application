<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout android:id="@+id/page__1_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View   android:id="@+id/_bg___1_ek2"
                    android:background="@drawable/_bg___1_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="415dp"
                    android:layout_height="926dp" />

                <View   android:id="@+id/rectangle_31"
                    android:background="@drawable/white_round_corner"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="236dp"
                    android:layout_width="411dp"
                    android:layout_height="690dp" />

                <RelativeLayout android:id="@+id/group_32"
                    android:layout_marginTop="378dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/_forgotten_password_"
                        android:textSize="15sp"
                        android:textColor="@color/_forgotten_password__color"
                        android:layout_marginLeft="196dp"
                        android:layout_marginTop="195dp"
                        android:layout_width="172.5dp"
                        android:layout_height="28.5dp"
                        android:text="@string/_forgotten_password__string"/>

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="190dp"
                        android:text="Remember me"/>

                    <RelativeLayout android:id="@+id/group_30"
                        android:layout_marginTop="99dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText  android:id="@+id/txtpassword"
                            android:background="@drawable/rectangle_2_shape"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="25dp"
                            android:drawableRight="@drawable/ic_sharp_visibility_off_24"
                            android:hint="Type here..."
                            android:paddingLeft="18dp"
                            android:textSize="15sp"
                            android:paddingRight="10dp"
                            android:inputType="textPassword"
                            android:textColorHint="@color/type_here____color"
                            android:layout_width="349dp"
                            android:layout_height="51dp"/>

<!--                        <ImageView android:id="@+id/hide"-->
<!--                            android:src="@drawable/hide"-->
<!--                            android:contentDescription="hide"-->
<!--                            android:layout_marginStart="307dp"-->
<!--                            android:layout_marginTop="40dp"-->
<!--                            android:layout_width="20dp"-->
<!--                            android:layout_height="20dp"/>-->

                        <TextView android:id="@+id/password"
                            android:textSize="16sp"
                            android:textColor="@color/_forgotten_password__color"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="96dp"
                            android:layout_height="30dp"
                            android:text="@string/password_string"/>
                    </RelativeLayout>


                    <RelativeLayout android:id="@+id/group_31"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText  android:id="@+id/txtuname"
                            android:background="@drawable/rectangle_2_shape"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="25dp"
                            android:hint="Type here..."
                            android:paddingLeft="18dp"
                            android:textSize="15sp"
                            android:textColorHint="@color/type_here____color"
                            android:layout_width="349dp"
                            android:layout_height="51dp"/>

<!--                        <ImageView android:id="@+id/polygon_1"-->
<!--                            android:src="@drawable/polygon_1"-->
<!--                            android:contentDescription="polygon_1"-->
<!--                            android:layout_marginStart="315dp"-->
<!--                            android:layout_marginTop="45dp"-->
<!--                            android:layout_width="13.07dp"-->
<!--                            android:layout_height="10.62dp"/>-->

                        <TextView android:id="@+id/username_or_phone_number"
                            android:textSize="16sp"
                            android:textColor="@color/_forgotten_password__color"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="235dp"
                            android:layout_height="30dp"
                            android:text="@string/username_or_phone_number_string"/>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnlogin"
                        android:background="@drawable/rectangle_15_shape"
                        android:layout_marginTop="258dp"
                        android:layout_marginStart="94dp"
                        android:textSize="20dp"
                        android:layout_width="160dp"
                        android:text="Login"
                        android:layout_height="50dp" />

                </RelativeLayout>

                <TextView android:id="@+id/login"
                    android:textSize="20sp"
                    android:textColor="@color/_forgotten_password__color"
                    android:layout_marginLeft="101dp"
                    android:layout_marginTop="260dp"
                    android:layout_width="83dp"
                    android:layout_height="37dp"
                    android:text="@string/login_string"/>

                <TextView android:id="@+id/_sign_up"
                    android:textSize="20sp"
                    android:textColor="@color/type_here____color"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="260dp"
                    android:layout_width="102dp"
                    android:layout_height="37dp"
                    android:text="@string/_sign_up_string"/>

                <ImageView
                    android:id="@+id/ride"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="90dp"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:src="@drawable/main_logo"/>

                <View   android:id="@+id/rectangle_33"
                    android:background="@drawable/rectangle_33_shape"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="306dp"
                    android:layout_width="174dp"
                    android:layout_height="2dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

