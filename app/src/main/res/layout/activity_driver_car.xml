                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6000"
                                    android:layout_marginLeft="54dp"
                                    android:textSize="16dp"
                                    android:textColor="@color/price"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" /day"
                                    android:textSize="12dp"/>

                            </LinearLayout>

                            <Button
